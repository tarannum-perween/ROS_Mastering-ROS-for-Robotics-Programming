<?xml version="1.0"?>
<robot name="tortoisebot">
  
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.3 0.3"/>
      </geometry>
      <material name="silver">
        <color rgba="0.75 0.75 0.75 1"/>
      </material>
    </visual>

    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->
    <collision>
      <geometry>
        <box size="0.6 0.3 0.3"/>
      </geometry>
    </collision>
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->

  </link>

  <!-- Membuat dudukan caster depan -->
  <link name="front_caster">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="silver"/>
    </visual>
    
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->
    <collision>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->

  </link>

  <joint name="front_caster_joint" type="continuous">
    <axis xyz="0 0 1"/>
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.3 0.0 -0.1" rpy="0.0 0.0 0.0"/>
  </joint>
  <!-- Membuat dudukan caster depan -->

  <!-- Membuat ban caster -->
  <link name="front_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.05"/>
      </geometry>
    </collision>
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->

  </link>

  <joint name="front_wheel_joint" type="continuous">
    <axis xyz="0.0 0.0 1"/>
    <parent link="front_caster"/>
    <child link="front_wheel"/>
    <origin xyz="0.05 0.0 -0.05" rpy="-1.5708 0.0 0.0"/>
  </joint>
  <!-- Membuat ban caster -->

  <!-- Membuat Ban Belakang -->
  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.05"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
    
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.05"/>
      </geometry>
    </collision>
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->

  </link>

  <joint name="right_wheel_joint" type="continuous">
    <axis xyz="0.0 0.0 1"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <origin xyz="-0.2825 -0.125 -.15" rpy="-1.5708 0.0 0.0"/>
  </joint>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.035" length="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->
    <collision>
      <geometry>
        <cylinder radius="0.035" length="0.05"/>
      </geometry>
    </collision>
    <!-- Physical Characteristics of Robot, ada <collision> dan <inertial> -->

  </link>

  <joint name="left_wheel_joint" type="continuous">
    <axis xyz="0.0 0.0 1"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.2825 0.125 -.15" rpy="-1.5708 0.0 0.0"/>
  </joint>
  <!-- Membuat Ban Belakang -->

</robot>
